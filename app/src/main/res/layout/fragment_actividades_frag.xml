<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37474F"
    tools:context="micrm.micrm.com.micrm.Actividades_frag">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/actividades_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                android:textColor="#FFFFFF"
                android:textColorHint="#9E9E9E"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/actividades_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo"
                android:textColor="#FFFFFF"
                android:textColorHint="#9E9E9E"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/actividades_organizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organización"
                android:textColor="#FFFFFF"
                android:textColorHint="#9E9E9E"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/actividades_persona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Persona"
                android:textColor="#FFFFFF"
                android:textColorHint="#9E9E9E"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/actividades_negocio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Negocio"
                android:textColor="#FFFFFF"
                android:textColorHint="#9E9E9E"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/actividades_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha"
                android:textColor="#FFFFFF"
                android:textColorHint="#9E9E9E"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/actividades_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hora"
                android:textColor="#FFFFFF"
                android:textColorHint="#9E9E9E"
                android:textSize="28sp" />

            <Button
                android:id="@+id/agregar_actividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Agregar Actividad"
                android:onClick="AgregarActividad" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
